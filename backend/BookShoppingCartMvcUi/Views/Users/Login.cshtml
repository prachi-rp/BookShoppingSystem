@model BookShoppingCartMvcUi.Models.User

@{
    ViewData["Title"] = "User Login";
}

<h2 class=" d-flex justify-content-center align-items-md-start ">Login</h2>

<div class=" d-flex justify-content-center align-items-md-start vh-100">
    <div class="col-md-4">
        <section>
            <form asp-action="Login" asp-controller="Users" method="post">
        @* Anti-forgery token to prevent CSRF attacks *@
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" id="username" class="form-control" placeholder="Enter Username" />
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Enter Password" />
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div><br/>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
