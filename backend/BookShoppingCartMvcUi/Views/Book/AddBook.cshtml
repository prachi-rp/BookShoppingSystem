@model BookDTO

@{
   Layout = "_AdminLayout";
}

<div style="width:50%">
    <h2> Add Book </h2>
    <a asp-action="Index" asp-controller="Book" class="btn btn-primary">Back</a>
    <form asp-action="AddBook" enctype="multipart/form-data">

        <div class="my-2">
            <label>Book*</label>
            <input type="text" class="form-control" asp-for="BookName" />
            <span asp-validation-for="BookName" class="text-danger"></span>
        </div>
        <div class="my-2">
            <label>Price*</label>
            <input type="number" class="form-control" asp-for="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="my-2">
            <label>Image</label>
            <input type="file" class="form-control" asp-for="ImageFile" />
        </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        <div class="my-2">
            <label>Genre*</label>
            <select class="form-control" asp-for="GenreId" asp-items="Model.GenreList">
                <option value="">Select Genre</option>
            </select>
            <span asp-validation-for="GenreId" class="text-danger"></span>
        </div>
        <div class="my-2">
            <label>Author*</label>
            <select class="form-control" asp-for="AuthorId" asp-items="Model.AuthorList">
                <option value="">Select Author</option>
            </select>
            <span asp-validation-for="AuthorId" class="text-danger"></span>
        </div> 
            
            <input type="submit" value="Add" class="btn btn-info" />
            
    </form>
</div>



