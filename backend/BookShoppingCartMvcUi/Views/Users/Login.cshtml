                     <p>
                         <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                     </p>
                     <p>
                         <a href="Users/Create" >Register as a new user</a>
                     </p>
                    
                 </div> *@

       
    </form>
        </section>
    </div>
</div>
